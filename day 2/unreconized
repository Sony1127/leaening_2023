#include <stdio.h>
#include <string.h>

void encodeString(char *str) {
    int length = strlen(str);
    
    for (int i = 0; i < length; i++) {
        str[i] = str[i] + 1;  // Increment ASCII value of each character by 1
    }
}

void decodeString(char *str) {
    int length = strlen(str);
    
    for (int i = 0; i < length; i++) {
        str[i] = str[i] - 1;  // Decrement ASCII value of each character by 1
    }
}

int main() {
    char originalString[] = "Hello, World!";
    printf("Original String: %s\n", originalString);
    
    encodeString(originalString);
    printf("Encoded String: %s\n", originalString);
    
    decodeString(originalString);
    printf("Decoded String: %s\n", originalString);
    
    return 0;
}